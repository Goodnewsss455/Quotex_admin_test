<body class="bg-gray-50">
    <div id="app" class="min-h-screen">
        <!-- Login Form -->
        <div v-if="!loggedIn" class="flex items-center justify-center h-screen bg-gray-50">
            <div class="bg-white p-8 rounded-xl shadow-lg w-96 border border-gray-200">
                <div class="flex justify-center mb-6">
                    <img src="https://i.postimg.cc/Nj0LMpqr/ji.png" alt="Logo" class="h-16 mb-2">
                </div>
                <h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Admin Login</h1>
                <div v-if="error" class="mb-4 p-3 bg-red-50 text-red-700 rounded-lg border border-red-200">
                    <div class="flex">
                        <i class="fas fa-exclamation-circle mr-2 mt-1"></i>
                        <span>{{ error }}</span>
                    </div>
                </div>
                <form @submit.prevent="login" class="space-y-5">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Password</label>
                        <div class="relative">
                            <i class="fas fa-lock absolute left-3 top-3 text-gray-400"></i>
                            <input type="password" v-model="password" class="w-full px-10 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
                        </div>
                    </div>
                    <button type="submit" class="w-full gradient-bg text-white py-2.5 rounded-lg hover:opacity-90 transition-all duration-200 font-medium shadow-md">
                        <i class="fas fa-sign-in-alt mr-2"></i>Login
                    </button>
                </form>
            </div>
        </div>

        <!-- Admin Dashboard -->
        <div v-else class="gradient-bg text-white shadow-md">
            <div class="container mx-auto px-6 py-4 flex justify-between items-center">
                <div class="flex items-center space-x-3">
                    <img src="https://i.postimg.cc/Nj0LMpqr/ji.png" alt="Logo" class="h-8">
                    <h1 class="text-xl font-bold">License Management System</h1>
                </div>
                <button @click="logout" class="bg-white bg-opacity-20 px-4 py-2 rounded-lg hover:bg-opacity-30 transition-all duration-200">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </button>
            </div>
        </div>

        <div v-if="loggedIn" class="container mx-auto px-4 py-8">
            <!-- Create License Section -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-8 border border-gray-200">
                <div class="flex items-center mb-4 pb-2 border-b border-gray-100">
                    <i class="fas fa-key text-blue-600 mr-3 text-xl"></i>
                    <h2 class="text-xl font-semibold text-gray-800">Create License</h2>
                </div>
                <form @submit.prevent="createLicense" class="grid grid-cols-1 md:grid-cols-4 gap-5">
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Username</label>
                        <div class="relative">
                            <i class="fas fa-user absolute left-3 top-3 text-gray-400"></i>
                            <input v-model="newLicense.username" type="text" class="w-full px-10 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">Amount</label>
                        <div class="relative">
                            <i class="fas fa-dollar-sign absolute left-3 top-3 text-gray-400"></i>
                            <input v-model="newLicense.amount" type="number" step="0.01" class="w-full px-10 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700 font-medium mb-2">License Key</label>
                        <div class="flex">
                            <div class="relative flex-grow">
                                <i class="fas fa-fingerprint absolute left-3 top-3 text-gray-400"></i>
                                <input v-model="newLicense.license_key" type="text" class="w-full px-10 py-2.5 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            </div>
                            <button @click="generateKey" type="button" class="bg-gray-100 px-4 py-2.5 border-t border-b border-r border-gray-300 rounded-r-lg hover:bg-gray-200 text-gray-600 transition-all">
                                <i class="fas fa-random"></i>
                            </button>
                        </div>
                    </div>
                    <div class="flex items-end">
                        <button type="submit" class="w-full gradient-bg text-white py-2.5 px-4 rounded-lg hover:opacity-90 transition-all duration-200 font-medium shadow-sm">
                            <i class="fas fa-plus mr-2"></i>Create License
                        </button>
                    </div>
                </form>
            </div>

            <!-- Search and License List -->
            <div class="bg-white rounded-xl shadow-md p-6 border border-gray-200">
                <div class="flex justify-between items-center mb-6 pb-4 border-b border-gray-100">
                    <div class="flex items-center">
                        <i class="fas fa-list-alt text-blue-600 mr-3 text-xl"></i>
                        <h2 class="text-xl font-semibold text-gray-800">License List</h2>
                    </div>
                    <div class="relative w-72">
                        <input v-model="searchQuery" @input="fetchLicenses" type="text" placeholder="Search licenses..."
                            class="w-full px-4 py-2.5 pl-10 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white rounded-lg overflow-hidden">
                        <thead>
                            <tr class="bg-blue-50 text-blue-800 uppercase text-xs">
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">ID</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">Username</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">Amount</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">License Key</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">Devices</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">Created At</th>
                                <th class="py-3 px-4 font-semibold text-left border-b border-gray-200">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Loading Indicator -->
                            <tr v-if="isLoading" class="text-center">
                                <td colspan="7" class="py-8">
                                    <div class="flex flex-col items-center justify-center">
                                        <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-blue-600 mb-3"></div>
                                        <p class="text-gray-500">Loading licenses...</p>
                                    </div>
                                </td>
                            </tr>
                            <!-- No Results Message -->
                            <tr v-else-if="licenses.length === 0" class="text-center">
                                <td colspan="7" class="py-8">
                                    <div class="flex flex-col items-center justify-center">
                                        <i class="fas fa-search text-gray-300 text-4xl mb-3"></i>
                                        <p class="text-gray-500">No licenses found</p>
                                        <p class="text-gray-400 text-sm mt-1" v-if="searchQuery">Try using different search terms</p>
                                    </div>
                                </td>
                            </tr>
                            <!-- License List -->
                            <tr v-else v-for="license in licenses" :key="license.id" class="hover:bg-gray-50 border-b border-gray-100">
                                <td class="py-3 px-4">{{ license.id }}</td>
                                <td class="py-3 px-4 font-medium">{{ license.username }}</td>
                                <td class="py-3 px-4 text-green-600 font-medium">${{ license.amount.toFixed(2) }}</td>
                                <td class="py-3 px-4 font-mono text-sm">
                                    <div class="flex items-center">
                                        <span class="truncate max-w-xs">{{ license.license_key }}</span>
                                        <button @click="copyToClipboard(license.license_key)" class="ml-2 text-blue-600 hover:text-blue-800">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                    </div>
                                </td>
                                <td class="py-3 px-4">
                                    <span :class="{'text-green-600': license.active_devices.length <= license.device_limit/2,
                                          'text-yellow-600': license.active_devices.length > license.device_limit/2 && license.active_devices.length < license.device_limit,
                                          'text-red-600': license.active_devices.length >= license.device_limit}">
                                        {{ license.active_devices.length }}/{{ license.device_limit }}
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-gray-500 text-sm">{{ license.created_at }}</td>
                                <td class="py-3 px-4">
                                    <div class="flex space-x-3">
                                        <button @click="showEditModal(license)" class="text-blue-600 hover:text-blue-800 transition-colors" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button @click="showInfo(license)" class="text-green-600 hover:text-green-800 transition-colors" title="Info">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                        <button @click="clearDevices(license.id)" class="text-orange-600 hover:text-orange-800 transition-colors" title="Clear Devices">
                                            <i class="fas fa-broom"></i>
                                        </button>
                                        <button @click="deleteLicense(license.id)" class="text-red-600 hover:text-red-800 transition-colors" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Edit Modal -->
        <div v-if="showModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white rounded-xl p-6 w-96 shadow-xl border border-gray-200">
                <div class="flex items-center mb-4 pb-2 border-b border-gray-100">
                    <i class="fas fa-edit text-blue-600 mr-3"></i>
                    <h3 class="text-lg font-semibold text-gray-800">Edit License</h3>
                </div>
                <div class="mb-5">
                    <label class="block text-gray-700 font-medium mb-2">Device Limit</label>
                    <div class="relative">
                        <i class="fas fa-mobile-alt absolute left-3 top-3 text-gray-400"></i>
                        <input v-model="editingLicense.device_limit" type="number" class="w-full px-10 py-2.5 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>
                <div class="flex justify-end space-x-3">
                    <button @click="showModal = false" class="px-4 py-2.5 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button @click="saveEdit" class="px-6 py-2.5 gradient-bg text-white rounded-lg hover:opacity-90 transition-all duration-200 font-medium">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>

        <!-- Info Modal with Device Details -->
        <div v-if="showInfoModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
            <div class="bg-white rounded-xl p-6 w-full max-w-2xl shadow-xl border border-gray-200">
                <div class="flex items-center mb-4 pb-2 border-b border-gray-100">
                    <i class="fas fa-info-circle text-blue-600 mr-3"></i>
                    <h3 class="text-lg font-semibold text-gray-800">License Details</h3>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6 bg-blue-50 p-4 rounded-lg border border-blue-100">
                    <div class="space-y-2">
                        <div class="flex items-center">
                            <i class="fas fa-user text-blue-600 mr-2"></i>
                            <p class="text-gray-700"><span class="font-semibold">Username:</span> <span class="ml-1">{{ viewingLicense.username }}</span></p>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-key text-blue-600 mr-2"></i>
                            <p class="text-gray-700"><span class="font-semibold">License Key:</span>
                                <span class="ml-1 font-mono">{{ viewingLicense.license_key }}</span>
                                <button @click="copyToClipboard(viewingLicense.license_key)" class="ml-2 text-blue-600 hover:text-blue-800">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </p>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-dollar-sign text-blue-600 mr-2"></i>
                            <p class="text-gray-700"><span class="font-semibold">Amount:</span> <span class="ml-1">${{ viewingLicense.amount?.toFixed(2) }}</span></p>
                        </div>
                    </div>
                    <div class="space-y-2">
                        <div class="flex items-center">
                            <i class="fas fa-mobile-alt text-blue-600 mr-2"></i>
                            <p class="text-gray-700"><span class="font-semibold">Device Limit:</span> <span class="ml-1">{{ viewingLicense.device_limit }}</span></p>
                        </div>
                        <div class="flex items-center">
                            <i class="fas fa-calendar-alt text-blue-600 mr-2"></i>
                            <p class="text-gray-700"><span class="font-semibold">Created At:</span> <span class="ml-1">{{ viewingLicense.created_at }}</span></p>
                        </div>
                    </div>
                </div>

                <div class="flex items-center mb-4 pb-2 border-b border-gray-100">
                    <i class="fas fa-mobile-alt text-blue-600 mr-3"></i>
                    <h4 class="font-medium text-gray-800">Active Devices ({{ viewingLicense.active_devices.length }})</h4>
                </div>

                <div v-if="viewingLicense.active_devices.length > 0" class="space-y-4">
                    <div v-for="(device, index) in viewingLicense.active_devices" :key="index"
                         class="p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
                            <div class="flex items-center">
                                <i class="fas fa-laptop text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">Device Type</p>
                                    <p class="font-medium">{{ device.device_type || 'Unknown' }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-globe text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">Browser</p>
                                    <p class="font-medium">{{ device.browser || 'Unknown' }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-desktop text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">OS</p>
                                    <p class="font-medium">{{ device.os || 'Unknown' }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-clock text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">First Used</p>
                                    <p class="font-medium">{{ device.first_used || 'Unknown' }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-network-wired text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">IP Address</p>
                                    <p class="font-medium">{{ device.ip_address || 'Unknown' }}</p>
                                </div>
                            </div>
                            <div class="flex items-center">
                                <i class="fas fa-globe-americas text-gray-500 mr-2"></i>
                                <div>
                                    <p class="text-xs text-gray-500">Timezone</p>
                                    <p class="font-medium">{{ device.timezone || 'Unknown' }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 pt-2 border-t border-gray-100">
                            <p class="text-xs text-gray-500 mb-1">User Agent</p>
                            <p class="text-sm text-gray-600 font-mono break-all">{{ device.user_agent || 'Unknown' }}</p>
                        </div>
                    </div>
                </div>
                <div v-else class="flex flex-col items-center justify-center py-8 text-gray-500">
                    <i class="fas fa-laptop-code text-gray-300 text-4xl mb-2"></i>
                    <p>No active devices</p>
                </div>

                <div class="flex justify-end mt-6">
                    <button @click="showInfoModal = false"
                            class="px-6 py-2.5 gradient-bg text-white rounded-lg hover:opacity-90 transition-all duration-200 font-medium">
                        <i class="fas fa-times mr-2"></i>Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/vue@3.2.31/dist/vue.global.min.js"></script>
    <script>
        const { createApp, ref } = Vue;

        createApp({
            setup() {
                const loggedIn = ref(false);
                const password = ref('');
                const error = ref('');
                const searchQuery = ref('');
                const licenses = ref([]);
                const isLoading = ref(false);
                const showModal = ref(false);
                const showInfoModal = ref(false);
                const editingLicense = ref({});
                const viewingLicense = ref({});

                const newLicense = ref({
                    username: '',
                    amount: 0,
                    license_key: ''
                });

                // Check login status
                function checkLogin() {
                    fetch('/admin')
                        .then(response => {
                            if (response.redirected && response.url.includes('/login')) {
                                loggedIn.value = false;
                            } else {
                                loggedIn.value = true;
                                fetchLicenses();
                            }
                        });
                }

                // Login function
                function login() {
                    fetch('/login', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                        },
                        body: `password=${encodeURIComponent(password.value)}`
                    })
                    .then(response => {
                        if (response.redirected) {
                            loggedIn.value = true;
                            fetchLicenses();
                        } else {
                            error.value = 'Invalid password';
                        }
                    });
                }

                // Logout function
                function logout() {
                    fetch('/logout')
                        .then(() => {
                            loggedIn.value = false;
                            password.value = '';
                        });
                }

                // Fetch licenses
                function fetchLicenses() {
                    // Set loading state
                    licenses.value = [];
                    isLoading.value = true;

                    let url = '/api/licenses';
                    if (searchQuery.value) {
                        url += `?search=${encodeURIComponent(searchQuery.value)}`;
                    }

                    fetch(url)
                        .then(response => response.json())
                        .then(data => {
                            licenses.value = data;
                            isLoading.value = false;
                        })
                        .catch(error => {
                            console.error('Error fetching licenses:', error);
                            isLoading.value = false;
                        });
                }

                // Create license
                function createLicense() {
                    const formData = new FormData();
                    formData.append('action', 'create');
                    formData.append('username', newLicense.value.username);
                    formData.append('amount', newLicense.value.amount);
                    formData.append('license_key', newLicense.value.license_key);

                    fetch('/api/licenses', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Show success notification
                            const toast = document.createElement('div');
                            toast.className = 'fixed bottom-4 right-4 bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 flex items-center';
                            toast.innerHTML = `
                                <i class="fas fa-check-circle mr-2"></i>
                                <span>License created successfully!</span>
                            `;
                            document.body.appendChild(toast);

                            setTimeout(() => {
                                toast.style.opacity = '0';
                                toast.style.transition = 'opacity 0.5s';
                                setTimeout(() => {
                                    document.body.removeChild(toast);
                                }, 500);
                            }, 2000);

                            // Reset form and refresh licenses
                            newLicense.value = { username: '', amount: 0, license_key: '' };
                            fetchLicenses();
                        }
                    });
                }

                // Generate random key
                function generateKey() {
                    newLicense.value.license_key = Math.random().toString(36).substring(2, 10).toUpperCase() +
                                                '@' + Math.floor(Math.random() * 100);
                }

                // Copy to clipboard
                function copyToClipboard(text) {
                    navigator.clipboard.writeText(text);

                    // Create a custom toast notification instead of using alert
                    const toast = document.createElement('div');
                    toast.className = 'fixed bottom-4 right-4 bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 flex items-center';
                    toast.innerHTML = `
                        <i class="fas fa-check-circle mr-2"></i>
                        <span>Copied to clipboard!</span>
                    `;
                    document.body.appendChild(toast);

                    // Remove the toast after 2 seconds
                    setTimeout(() => {
                        toast.style.opacity = '0';
                        toast.style.transition = 'opacity 0.5s';
                        setTimeout(() => {
                            document.body.removeChild(toast);
                        }, 500);
                    }, 2000);
                }

                // Show edit modal
                function showEditModal(license) {
                    editingLicense.value = { ...license };
                    showModal.value = true;
                }

                // Save edit
                function saveEdit() {
                    const formData = new FormData();
                    formData.append('action', 'edit');
                    formData.append('id', editingLicense.value.id);
                    formData.append('device_limit', editingLicense.value.device_limit);

                    fetch('/api/licenses', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showModal.value = false;
                            fetchLicenses();

                            // Show success notification
                            const toast = document.createElement('div');
                            toast.className = 'fixed bottom-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 flex items-center';
                            toast.innerHTML = `
                                <i class="fas fa-check-circle mr-2"></i>
                                <span>License updated successfully!</span>
                            `;
                            document.body.appendChild(toast);

                            setTimeout(() => {
                                toast.style.opacity = '0';
                                toast.style.transition = 'opacity 0.5s';
                                setTimeout(() => {
                                    document.body.removeChild(toast);
                                }, 500);
                            }, 2000);
                        }
                    });
                }

                // Show info with device details
                function showInfo(license) {
                    viewingLicense.value = { ...license };
                    showInfoModal.value = true;
                }

                // Custom confirmation dialog
                function showConfirmation(message, confirmAction) {
                    // Create modal backdrop
                    const backdrop = document.createElement('div');
                    backdrop.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';

                    // Create modal content
                    const modal = document.createElement('div');
                    modal.className = 'bg-white rounded-xl p-6 w-80 shadow-xl border border-gray-200';
                    modal.innerHTML = `
                        <div class="text-center mb-4">
                            <i class="fas fa-exclamation-triangle text-yellow-500 text-4xl mb-3"></i>
                            <h3 class="text-lg font-semibold text-gray-800">Confirmation</h3>
                            <p class="mt-2 text-gray-600">${message}</p>
                        </div>
                        <div class="flex justify-center space-x-3 mt-6">
                            <button id="cancel-btn" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                                Cancel
                            </button>
                            <button id="confirm-btn" class="px-5 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                                Confirm
                            </button>
                        </div>
                    `;

                    backdrop.appendChild(modal);
                    document.body.appendChild(backdrop);

                    // Handle button clicks
                    return new Promise((resolve) => {
                        document.getElementById('cancel-btn').addEventListener('click', () => {
                            document.body.removeChild(backdrop);
                            resolve(false);
                        });

                        document.getElementById('confirm-btn').addEventListener('click', () => {
                            document.body.removeChild(backdrop);
                            resolve(true);
                        });
                    });
                }

                // Clear devices
                async function clearDevices(id) {
                    const confirmed = await showConfirmation('Are you sure you want to clear all devices for this license?');

                    if (confirmed) {
                        const formData = new FormData();
                        formData.append('action', 'clear');
                        formData.append('id', id);

                        fetch('/api/licenses', {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                fetchLicenses();

                                // Show success notification
                                const toast = document.createElement('div');
                                toast.className = 'fixed bottom-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 flex items-center';
                                toast.innerHTML = `
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <span>All devices cleared successfully!</span>
                                `;
                                document.body.appendChild(toast);

                                setTimeout(() => {
                                    toast.style.opacity = '0';
                                    toast.style.transition = 'opacity 0.5s';
                                    setTimeout(() => {
                                        document.body.removeChild(toast);
                                    }, 500);
                                }, 2000);
                            }
                        });
                    }
                }

                // Delete license
                async function deleteLicense(id) {
                    const confirmed = await showConfirmation('Are you sure you want to delete this license? This action cannot be undone.');

                    if (confirmed) {
                        const formData = new FormData();
                        formData.append('action', 'delete');
                        formData.append('id', id);

                        fetch('/api/licenses', {
                            method: 'POST',
                            body: formData
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                fetchLicenses();

                                // Show success notification
                                const toast = document.createElement('div');
                                toast.className = 'fixed bottom-4 right-4 bg-red-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 flex items-center';
                                toast.innerHTML = `
                                    <i class="fas fa-trash mr-2"></i>
                                    <span>License deleted successfully!</span>
                                `;
                                document.body.appendChild(toast);

                                setTimeout(() => {
                                    toast.style.opacity = '0';
                                    toast.style.transition = 'opacity 0.5s';
                                    setTimeout(() => {
                                        document.body.removeChild(toast);
                                    }, 500);
                                }, 2000);
                            }
                        });
                    }
                }

                // Initialize
                checkLogin();

                return {
                    loggedIn,
                    password,
                    error,
                    searchQuery,
                    licenses,
                    isLoading,
                    newLicense,
                    showModal,
                    showInfoModal,
                    editingLicense,
                    viewingLicense,
                    login,
                    logout,
                    fetchLicenses,
                    createLicense,
                    generateKey,
                    copyToClipboard,
                    showEditModal,
                    saveEdit,
                    showInfo,
                    clearDevices,
                    deleteLicense
                };
            }
        }).mount('#app');
    </script>
</body>
</html>
